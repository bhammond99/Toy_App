#logo {
	float: left;
	margin-right: 10px;
	font-size: 1.7em
	color: #fff;
	text-transform: uppercase;
	letter-spacing: -1px;
	font-weight: bold;
}


footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: #777;
}

footer a {
  color: #555;
}

footer a:hover {
  color: #222;
}

footer small {
  float: left;
  margin-left: 15px;
}

footer ul {
  float: right;
  list-style: none;
  margin-right: 30px;
}

footer ul li {
  float: left;
  margin-left: 15px;
}

